@model ProdutoModel;

@{
    ViewData["Title"] = "Confirmação de exclusão de Produto";
}

<div class="text-center">
    <h3>Deseja realmente excluir esse produto (@Model.Descricao)?</h3>
</div>

<a class="btn btn-secondary" role="button" asp-controller="Produto" asp-action="Index">Cancelar exclusão</a>
<a class="btn btn-danger" role="button" asp-controller="Produto" asp-action="Excluir" asp-route-id="@Model.ID">Confirmar exclusão</a>
