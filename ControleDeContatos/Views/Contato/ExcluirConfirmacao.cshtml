@model ContatoModel;

@{
    ViewData["Title"] = "Confirmação de exclusão de Contato";
}

<div class="text-center">
    <h3>Deseja realmente excluir esse contato (@Model.Nome)?</h3>
</div>

<a class="btn btn-secondary" role="button" asp-controller="Contato" asp-action="Index" >Cancelar exclusão</a>
<a class="btn btn-danger" role="button" asp-controller="Contato" asp-action="Excluir" asp-route-id="@Model.ID">Confirmar exclusão</a>
